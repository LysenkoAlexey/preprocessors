padding = 10px
indentValue = 2vw
color = #DCDCDC

body
	background-color #164B69
	display flex
	align-items center
	justify-content center
	color black
	text-align center
	flex-direction column
	padding indentValue
	font-size 14px
	font-family arial

	.centralBlock
		width 50%
		min-height 700px
		min-width 100px
		padding indentValue
		margin @padding
		background-color #E3E3E3
		display flex
		flex-direction column

		.menuFlex
			padding padding/2
			display flex
			flex-direction row
			justify-content space-around
			.menuItem
				a
					text-decoration none
					font-weight: bold
					color black
				a:hover
					background-color grey //#DCDCDC
				span
					background-color grey

@import textBlock
@import videoBlock
@import rowOfImages

@import mainMedia
@import textFlex





